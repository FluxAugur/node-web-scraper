{
  env: {
    browser: true,
    es6: true,
    node: true,
    mocha: true
  },
  fix: true,
  globals: {
    angular: 1
  },
  parser: babel-eslint,
  parserOptions: {
    ecmaVersion: 6
  },
  plugins: [
    eslint-plugin-angularjs,
    eslint-plugin-babel,
    eslint-plugin-bdd,
    eslint-plugin-chai,
    eslint-plugin-cross-browser-compatibility-check,
    eslint-plugin-es6-recommended,
    eslint-plugin-html,
    eslint-plugin-jade,
    eslint-plugin-json,
    eslint-plugin-lodash,
    eslint-plugin-mocha,
    eslint-plugin-node,
    eslint-plugin-protractor,
    eslint-plugin-security,
    eslint-plugin-tdd
  ],
  ecmaFeatures: {
    arrowFunctions: true,
    binaryLiterals: true,
    blockBindings: true,
    classes: true,
    defaultParams: true,
    destructuring: true,
    forOf: true,
    generators: true,
    modules: true,
    objectLiteralComputerProperties: true,
    objectLiteralDuplicateProperties: true,
    objectLiteralShorthandMethods: true,
    objectLiteralShorthandProperties: true,
    octalLiterals: true,
    regexUFlag: true,
    regexYFlag: true,
    restParams: true,
    spread: true,
    superInFunctions: true,
    templateStrings: true,
    unicodeCodePointEscapes: true,
    globalReturn: true,
    jsx: true
  },
  rules: {
    array-bracket-spacing: [2, never],
    block-scoped-var: 2,
    block-spacing: [2, never],
    brace-style: [2, 1tbs, {allowSingleLine: false}],
    camelcase: [1, properties: always],
    comma-dangle: 0,
    comma-spacing: [2, {before: false, after: true}],
    comma-style: [2, last],
    computed-property-spacing: [2, never],
    curly: 2,
    eol-last: [2, unix],
    eqeqeq: [2, smart],
    func-names: 0,
    indent: [2, 2, SwitchCase: 1],
    key-spacing: [2, {beforeColon: false, afterColon: true, mode: strict}],
    keyword-spacing: 2,
    max-depth: [1, 3],
    max-len: [1, 80, 4, {ignoreComments: true, ignoreUrls: true, ignorePattern: "^\\s*var\\s.+=\\s*require\\s*\\("}],
    max-statements: [1, 15],
    new-cap: 1,
    no-array-constructor: [2],
    no-cond-assign: [2],
    no-console: [2],
    no-extend-native: [2],
    no-mixed-spaces-and-tabs: [2],
    no-trailing-spaces: [2],
    no-unused-vars: [2],
    no-use-before-define: [2, nofunc],
    object-curly-spacing: [2, never],
    one-var: [2, never],
    operator-linebreak: [2, after],
    padded-blocks: [2, never],
    quotes: [2, single, avoid-escape],
    semi: [2, always],
    semi-spacing: [2, {before: false, after: true}],
    space-before-blocks: [2, always],
    space-before-function-paren: [2, never],
    space-in-parens: [2, never],
    space-infix-ops: [2, {int32Hint: false}],
    space-unary-ops: [2],
    strict: [0, safe]
  }
}
